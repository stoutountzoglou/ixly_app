<h1>Candidate Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Candidate</th>
      <th>Tasks</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @candidates.each do |candidate| %>
      <tr>
        <td><%= "#{candidate.name} #{candidate.surname}" %></td>
        <td>
          <ul>
            <% candidate.tasks.map(&:description).each do |description| %>
              <li><%= description%></li>
            <% end %>
          </ul>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
